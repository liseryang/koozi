<?xml version="1.0" encoding="utf-8"?>

<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<welcome-file-list>
		<welcome-file>shop/home</welcome-file>
	</welcome-file-list><!--

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
            /WEB-INF/applicationContext-security.xml
        </param-value>
	</context-param>

	-->
	<filter>
		<filter-name>springSecurityFilterChain</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<servlet-name>dispatch</servlet-name>
	</filter-mapping>
	
		<!-- 
		Sitemesh filter must execute after Acegi filter. See above.
	-->


	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>



	<servlet>
		<servlet-name>dispatch</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/dispatch-servlet.xml</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>dispatch</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>dispatch</servlet-name>
		<url-pattern>/shop/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>dispatch</servlet-name>
		<url-pattern>/openAPI/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>dispatch</servlet-name>
		<url-pattern>/admin/*</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>HiddenHttpMethodFilter</filter-name>
		<filter-class>org.springframework.web.filter.HiddenHttpMethodFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>HiddenHttpMethodFilter</filter-name>
		<servlet-name>dispatch</servlet-name>
	</filter-mapping>

	

	<servlet>
		<servlet-name>fileServlet</servlet-name>
		<servlet-class>be.koozi.tools.FileServlet</servlet-class>
		<init-param>
			<param-name>basePath</param-name>
			<param-value>/WEB-INF/static</param-value>
		</init-param>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>fileServlet</servlet-name>
		<url-pattern>/static/*</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>sitemesh-freemarker</servlet-name>
		<servlet-class>be.koozi.tools.DecoratorServlet</servlet-class>
		<init-param>
			<param-name>TemplatePath</param-name>
			<param-value>/WEB-INF/templates</param-value>
		</init-param>
		<init-param>
			<param-name>default_encoding</param-name>
			<param-value>ISO-8859-1</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>sitemesh-freemarker</servlet-name>
		<url-pattern>/decorator/*</url-pattern>
	</servlet-mapping>

	<filter-mapping>
		<filter-name>SitemeshFilter</filter-name>
		<servlet-name>dispatch</servlet-name>
	</filter-mapping>
	
	<filter>
		<filter-name>SitemeshFilter</filter-name>
		<filter-class>com.opensymphony.sitemesh.webapp.SiteMeshFilter</filter-class>
		<init-param>
			<param-name>debug.pagewriter</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
</web-app>
